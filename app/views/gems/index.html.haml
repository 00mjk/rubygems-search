.content
  .panel.panel-default
    .panel-body
      .row
        .col-md-4.results
          =total_found(@gems)
      .row
        
        -if @gems.respond_to? :facets
          .col-md-2
            = render partial:'gems/facets', locals: {gems: @gems}  
          
        %div{class: (@gems.respond_to?(:facets) ? 'col-md-10' : 'col-md-12')}
          = render partial:'gems/serp', locals: {gems: @gems}
        
          %tr
            %td{colspan: 2}
              = paginate @gems