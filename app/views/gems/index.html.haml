.content
  .panel.panel-default
    .panel-body
      -if @show_advanced
        .row
          .col-md-12
            =render partial:'gems/advanced'
      .row
        .col-md-4.results
          =total_found(@gems)
      .row
        
        -if @gems.respond_to?(:facets) && @gems.facets.present?
          .col-md-2
            = render partial:'gems/facets'
          
        %div{class: (@gems.respond_to?(:facets) && @gems.facets.present? ? 'col-md-10' : 'col-md-12')}
          = render partial:'gems/serp'
        
          %tr
            %td{colspan: 2}
              = paginate @gems